<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Parabank">
    <parameter name="browser" value=""/>

    <test name="Register">
        <classes>
            <class name="TestCases.TC01_Register">
                <methods>
                    <include name="registerPage"/>
                </methods>
            </class>

            <class name="TestCases.TC03_LogOut">
                <methods>
                    <include name="logOutPage"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Login">
        <classes>
            <class name="TestCases.TC02_Login">
                <methods>
                    <include name="loginPage"/>
                </methods>
            </class>

            <class name="TestCases.TC04_NewAccount">
                <parameter name="accountType" value="CHECKING"/>
                <methods>
                    <include name="createNewAccount"/>
                    <include name="saveFirstAccId"/>
                </methods>
            </class>

            <class name="TestCases.TC03_LogOut">
                <methods>
                    <include name="logOutPage"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Login again ">
        <classes>
            <class name="TestCases.TC02_Login">
                <methods>
                    <include name="loginPage"/>
                </methods>
            </class>

            <class name="TestCases.TC04_NewAccount">
                <parameter name="accountType" value="SAVINGS"/>
                <methods>
                    <include name="createNewAccount"/>
                    <include name="saveSecondAccId"/>
                </methods>
            </class>

            <class name="TestCases.TC05_TransferFunds">
                <methods>
                    <include name="openTransferFunds"/>
                </methods>
            </class>

            <class name="TestCases.TC03_LogOut">
                <methods>
                    <include name="logOutPage"/>
                </methods>
            </class>

        </classes>
    </test>



</suite>